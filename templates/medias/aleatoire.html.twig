<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">{{ mediaaleatoire.title }}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <img src="{{ mediaaleatoire.posterPath }}" style="width:100%;">
        <div class="list-button text-right mt-3 d-flex justify-content-center">
            {% if app.user %}
                {% set var = app.user.mediaUser(mediaaleatoire) %}
                    <a class="btn btn-secondary text-white mr-3 {% if var is not null and var.haveSeen == true %} btn-main{% endif %} haveSeen" 
                    data-url="{{ path('medias.haveseen', {'id': mediaaleatoire.id }) }}" role="button">
                        <i class="fas fa-check"></i> Déjà vu
                    </a>
                {% set var = app.user.mediaUser(mediaaleatoire) %}
                    <a class="btn btn-secondary text-white {% if var is not null and var.wishList == true %}btn-main{% endif %} wishList" 
                    data-url="{{ path('medias.wantsee', {'id': mediaaleatoire.id }) }}" role="button">
                        <i class="fas fa-bookmark"></i> Wish list
                    </a>
            {% endif %}
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
        <a class="btn btn-secondary" href="{{ path('medias.show', {'id': mediaaleatoire.id}) }}" role="button">En savoir +</a>
    </div>
</div>