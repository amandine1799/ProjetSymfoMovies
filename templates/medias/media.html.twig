{% extends 'base.html.twig' %}
{% block title %}{{ media.title }}{% endblock %}

{% block body %}
  <div class="media">
    <div class="container mt-3 mb-4">
      <div class="row">
        <div class="col-lg-4 text-center">
          <img src="{{ media.poster }}" alt="">
        </div>
        <div class="col-lg-8">
          <div class="list-button text-left text-white mt-4">
            {% if app.user %}
              <a title="J'aime" data-content='1' class="btn btn-secondary getContent {% if app.user.like(media) == 1 %} btn-success {% endif %} like" data-url="{{ path('medias.like', {'id': media.id }) }}" role="button">
                <i class="far fa-thumbs-up"></i>
              </a>
              <a title="J'aime pas" data-content='-1' class="btn btn-secondary getContent {% if app.user.like(media) == -1 %} btn-danger {% endif %} dislike" data-url="{{ path('medias.like', {'id': media.id }) }}" role="button">
                <i class="far fa-thumbs-down"></i>
              </a>
            {% endif %}
          </div>
          <div class="media-content text-justify">
            <div class="list-button text-right text-white mb-3">
              {% if app.user %}
                {% set var = app.user.mediaUser(media) %}
                <a title="Ajouter à sa liste de médias déjà vu" class="btn btn-secondary {% if var is not null and var.haveSeen == true %} btn-info{% endif %} haveSeen" data-url="{{ path('medias.haveseen', {'id': media.id }) }}" role="button">
                  <i class="fas fa-film"> Déjà Vu</i>
                </a>
                {% set var = app.user.mediaUser(media) %}
                <a title="Ajouter à sa WishList" class="btn btn-secondary {% if var is not null and var.wishList == true %} btn-info{% endif %} wishList" data-url="{{ path('medias.wantsee', {'id': media.id }) }}" role="button">
                  <i class="far fa-clock"> Wish List</i>
                </a>
              {% endif %}
            </div>
            <h2>{{ media.title }}</h2>
            <p>{{ media.synopsis | raw }}</p>
          </div>
          <div class="d-flex justify-content-center mt-5">
              <p class="mr-5">Durée : {{ media.duration }}mns</p>
              <p class="mr-5">Genre : {{ media.genres.name }}</p>
              <p class="mr-5">Année : {{ media.released | date('d/m/Y') }} </p>     
          </div> 
        </div>
      </div>
    </div>
  </div>
  
  {% if media.trailer is not null %} 
  <div class="medias-caract">
    <div class="container mt-4 mb-4">
      <div class="row justify-content-md-center">
        <div class="video">
          <embed src="{{ media.trailer }}" allowfullscreen="true">
        </div>
      </div>
    </div>
  </div>
  {% endif %}

  <div class="container mt-4 mb-4">
    <div class="acteur">
      <h3>Casting</h3>
      <div class="d-flex flex-wrap mt-3">
        {% for actor in media.actors %}
        <li class="card mr-2 mb-2">
          <a href="{{ path('actors.show', {'id': actor.id}) }}" class="mr-1">
            <img src="{{ actor.image }}">
            <p>{{ actor.name }}</p> 
          </a>
        </li>
        {% endfor %}
      </div>
    </div>
   </div> 

  <div class="review container mt-3">
    <h3>Reviews</h3>
    <h1>Ecrivez votre Review!</h1>
    <div class="card border-light mb-8">
      {% for review in media.reviews %}
        <div class="card-header">
          <h5 class="card-title">{{ review.title }}</h5>
        </div>
        <div class="card-body">
          <p class="card-text">{{ review.text }}</p>
          <p>Par {{ review.user.username }} le {{ review.date | date('d/m/Y') }}<p>
        </div>
      {% endfor %}
    </div>
    {% if app.user %}
      <a class="btn btn-secondary mb-3" href="{{ path('review.new', {'id': media.id}) }}">Ajouter une Review</a>
    {% endif %}
  </div>
{% endblock %}
