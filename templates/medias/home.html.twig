{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="jumbotron content-home">
        <div class="jumbo-content">
        <h1 class="display-4 title-index">Watching Medias</h1>
        <p class="lead d-flex text-center justify-content-center">Bienvenue sur Watching Medias, le paradis des Films et Séries!<br/>
        Des listes à créer pour les membres du Site!<br/>    
        Des reviews pour vous donner une idée de l'appréciation du média!<br/>
        Et plus encore !</p>
        </div>
        <div class="d-flex justify-content-end">
            <a class="btn btn-primary btn-main btn-lg btn-home" href="{{ path('medias.index')}}" role="button">Tous les Médias</a>
        </div>
    </div>
    <div class="container">
        <div class="title-next">
            <h2 class="ml-4">Les prochaines sorties</h2>
        </div>
        <div class="carousel1 mb-5" data-flickity='{ "groupCells": true }'>
            {% for n in next %}
                <div class="carousel-cell">
                    <a href="{{ path('medias.show', {'id': n.id}) }}"><img src="{{ n.poster }}" alt="affiche">
                    </a>
                </div>
            {% endfor %}
        </div>

        <div class="title-next mt-5">
            <h2 class="ml-4">Les dernières sorties</h2>
        </div>
        <div class="carousel2 mb-5" data-flickity='{ "groupCells": true }'>
            {% for l in last %}
                <div class="carousel-cell">
                    <a href="{{ path('medias.show', {'id': l.id}) }}"><img src="{{ l.poster }}" alt="affiche">
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}