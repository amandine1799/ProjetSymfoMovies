{% extends 'base.html.twig' %}

{% block title %}Espace Médias{% endblock %}

{% block body %}
<div class="container">
    <h2>Liste des Médias</h2>

    <div>
        <a class="btn btn-secondary" href="{{ path('medias.new') }}">Ajouter</a>
    </div>
    <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <a class="nav-item nav-link active" href="{{ path('medias.crud') }}" data-toggle="tab" role="tab" aria-controls="nav-profile" aria-selected="true">ESPACE MEDIAS</a>
            <a class="nav-item nav-link" href="{{ path('actors.crud') }}" aria-selected="false">ESPACE ACTEURS</a>
            <a class="nav-item nav-link" href="{{ path('membres.crud') }}" aria-selected="false">ESPACE MEMBRES</a>
            <a class="nav-item nav-link" href="{{ path('statistiques') }}" aria-selected="false">STATISTIQUES</a>
        </div>
    </nav>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Titre</th>
                    <th scope="col">Type</th>
                    <th scope="col">Année</th>
                    <th scope="col">Durée</th>
                    <th scope="col">Affiche</th>
                    <th scope="col">Genre</th>
                    <th scope="col">Acteurs</th>
                    <th scope="col">Editer</th>
                    <th scope="col">Voir</th>
                </tr>
            </thead>
            <tbody>
            {% for media in media %}
                <tr class="table-secondary">
                    <td>{{ media.title }}</td>
                    <td>{{ media.type }}</td>
                    <td>{{ media.released | date('d/m/Y') }}</td>
                    <td>{{ media.duration }}</td>
                    <td>{{ media.poster }}</td>
                    <td>{{ media.genres.name }}</td>
                    <td>
                    {% for actor in media.actors %}
                        {{ actor.name }}
                    {% endfor %}
                    </td>
                    <td><a href="{{ path('medias.edit', {'id': media.id}) }}"><i class="fas fa-edit"></i></a></td>
                    <td><a href="{{ path('medias.show', {'id' : media.id}) }}"><i class="far fa-eye"></i></a></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
