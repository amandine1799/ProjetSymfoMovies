<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://bootswatch.com/4/cosmo/bootstrap.min.css">
        <link rel="stylesheet" href="/css/style.css">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css">
        <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Arvo">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
       <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <a class="navbar-brand" href="/movies">WatchingMedias</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarColor02">
            <ul class="navbar-nav mr-auto">
              <li class="nav-item">
                <a class="nav-link" href="/movies">Films et Séries</a>
              </li>
              {% if app.user %}
              <li class="nav-item">
                <a class="nav-link" href="#">Liste des médias à visionner</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Liste des médias vus</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ path('review.list') }}">Mes reviews</a>
              </li>
              {% endif %}
            </ul>
            {% if not app.user %}
            <a class="nav-link" href="{{ path('login') }}">Connexion</a>
            <a class="nav-link" href="{{ path('security_registration') }}">Inscription</a>
             {% else  %}
            <a class="nav-link" href="{{ path('logout') }}">Déconnexion</a>
            {% endif %}
            {% if app.user %}
            {# is_granted('IS_AUTHENTICATED_REMEMBERED') #}
            <form class="form-inline my-2 my-lg-0">
              <button class="btn btn-dark"><a class="nav-link" href="{{ path('movies_crud') }}">Espace Modération</a></button>
            </form>
            {% endif %}
          </div>
        </nav>
        
        {% block body %}{% endblock %}
        <footer>
          <div class="footer-copyright text-center bg-dark py-3">© 2019 Copyright: WatchingMedias
          </div>
        </footer>
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
