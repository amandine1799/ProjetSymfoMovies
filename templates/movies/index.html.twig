{% extends 'base.html.twig' %}

{% block title %}Hello MoviesController!{% endblock %}

{% block body %}

<section class="films">

  {% for media in medias %}
    <div class="film">
      <h2>{{ media.title }}</h2>
      <div class="content">
        <img src="{{ media.poster }}" alt="">
        <a href="{{ path('movies_show', {'title': media.title}) }}" class="btn btn-primary">En savoir +</a>
      </div>
    </div>
  {% endfor %}

</section>

{% endblock %}
