{% extends 'base.html.twig' %}

{% block title %}Liste des Reviews{% endblock %}

{% block body %}

<div class="container mt-3">
    <div class="poster-list">
        {% for review in reviews %}
            <td><a href="{{ path('medias.show', {'id': review.media.id}) }}"><img src="{{ review.media.poster }}" alt="affiche"></a></td><br/>
            <td><a class="btn btn-secondary" role="button" href="{{ path('review.edit', {'id': review.id}) }}"><i class="fas fa-edit"></i></a></td>
            <td><a class="btn btn-secondary" role="button" href="{{ path('review.delete', {'id' : review.id}) }}"><i class="far fa-trash-alt"></i></a></td>
            <p>{{ review.title }}</p>
        {% endfor %}
    </div>
</div>
{% endblock %}
