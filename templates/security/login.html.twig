{% extends 'base.html.twig' %} 

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="bg">
        <div class="d-flex flex-column justify-content-center mx-auto my-2 px-4 py-2 box-form">
            <h3 class="text-center font-weight-bold">Connexion</h3>
            {% if error %}
                <div class="alert alert-danger">Mauvais identifiants</div>
            {% endif %}
            <form method="post" action="{{ path('login') }}">
                <input type="text" class="w-100 p-3 my-3 registration" required name="_username" placeholder="Pseudo" id="inputEmail" required>
                <input type="password" class="w-100 p-3 my-3 registration" required name="_password" placeholder="Mot de Passe" id="inputPassword" required>

                <div class="d-flex justify-content-center">
                    <button class="btn btn-dark btn-sm text-uppercase" type="submit">Connexion</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

