{% extends 'base.html.twig' %}

{% block title %}Edit Membres{% endblock %}

{% block body %}
    {{ form_start(form) }}
    <div class="container">
        <h2>Editer un Membre</h2>
        <div>
            <a class="btn btn-secondary" href="{{ path('membres.crud') }}" role="button">Retour</a>
            <button type="submit" class="btn btn-secondary">Mettre à jour</button>
        </div>

        <div>
        {{ form_label(form.username) }}
        {{ form_widget(form.username) }}
        </div>
        <div>
        {{ form_label(form.email) }}
        {{ form_widget(form.email) }}
        </div>
        {{ form_end(form) }}
        <div>
            <a href="{{ path('membres.delete', {'id': users.id}) }}" onclick="return confirm('Etes vous-sûr de vouloir supprimer cet utilisateur?')" class="btn btn-danger mt-2">Supprimer</a>
        </div>
    </div>    
{% endblock %}