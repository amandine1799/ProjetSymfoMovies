{% extends 'base.html.twig' %} 

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="bg">
    <div class="d-flex flex-column justify-content-center mx-auto my-2 px-4 py-2 box-form">
        <h3 class="text-center font-weight-bold">Inscription</h3>
        {{ form_start(form) }}
        {{ form_errors(form.username) }}
        {{ form_widget(form.username, {'label': 'Nom d\'utilisateur', 'attr': {'placeholder': 'Nom d\'utilisateur...','class': 'w-100 p-4 my-3 registration'}}) }}
        {{ form_errors(form.email) }}
        {{ form_widget(form.email, {'label': 'Adresse Email', 'attr': {'placeholder': 'Adresse Email...','class': 'w-100 p-4 my-3 registration'}}) }}
        {{ form_errors(form.password) }}
        {{ form_widget(form.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'Mot de passe...','class': 'w-100 p-4 my-3 registration'}}) }}
        {{ form_errors(form.confirm_password) }}
        {{ form_widget(form.confirm_password, {'label': 'Confirmation du mot de passe', 'attr': {'placeholder': 'Confirmation de votre mot de passe...','class': 'w-100 p-4 my-3 registration'}}) }}

        <div class="d-flex justify-content-center">
            <button class="btn btn-dark btn-sm text-uppercase" type="submit">Inscription</button>
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

